<preference-headers
	xmlns:android="http://schemas.android.com/apk/res/android">

	<header
		android:title="@string/user_interface" />

	<header
		android:id="@+id/user_interface"
		android:fragment="com.liquid.control.fragments.UserInterface"
		android:title="@string/general_ui" />

	<header
		android:id="@+id/nav_bar"
		android:fragment="com.liquid.control.fragments.Navbar"
		android:title="@string/nav_bar" />

	<header
		android:id="@+id/lockscreens"
		android:fragment="com.liquid.control.fragments.Lockscreens"
		android:title="@string/lockscreen_options" />

	<header
		android:id="@+id/power_menu"
		android:fragment="com.liquid.control.fragments.PowerMenu"
		android:title="@string/power_menu_optons" />

	<header
		android:title="@string/functionality" />

	<header
		android:id="@+id/power_saver"
		android:fragment="com.liquid.control.fragments.PowerSaver"
